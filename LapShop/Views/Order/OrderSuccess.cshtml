@if (ViewBag.InvoiceItems is not null && ViewBag.Cart is not null)
{


    <section class="bg-white py-8 antialiased md:py-16">
        <div class="mx-auto max-w-screen-xl px-4 2xl:px-0">
            <h2 class="text-xl font-semibold text-gray-900 sm:text-2xl">Track the delivery of order
                #@ViewBag.SalesInvoice.InvoiceId</h2>

            <div class="mt-6 sm:mt-8 lg:flex lg:gap-8">
                <div
                    class="w-full divide-y divide-gray-200 overflow-hidden rounded-lg border border-gray-200 lg:max-w-xl xl:max-w-2xl">
                    @foreach (var item in @ViewBag.Cart.lstItems)
                    {
                        <div class="space-y-4 p-6">
                            <div class="flex items-center gap-6">
                                <a href="#" class="h-14 w-14 shrink-0">
                                    <img class="h-full w-full block"
                                        src="~/Uploads/Items/@item.ImageName"
                                        alt="imac image" />
                                </a>

                                <a href="#" class="min-w-0 flex-1 font-medium text-gray-900 hover:underline">@item.ItemName</a>
                            </div>

                            <div class="flex items-center justify-between gap-4">
                                <p class="text-sm font-normal text-gray-500 "><span
                                        class="font-medium text-gray-900 ">Product ID:</span> @item.ItemId</p>

                                <div class="flex items-center justify-end gap-4">
                                    <p class="text-base font-normal text-gray-900 ">x @item.Qty</p>

                                    <p class="text-xl font-bold leading-tight text-gray-900">@item.Price
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="space-y-4 bg-gray-50 p-6 ">
                        <div class="space-y-2">
                            <dl class="flex items-center justify-between gap-4">
                                <dt class="font-normal text-gray-500 ">Original price</dt>
                                <dd class="font-medium text-gray-900 ">$@ViewBag.Cart.Total </dd>
                            </dl>

                            <dl class="flex items-center justify-between gap-4">
                                <dt class="font-normal text-gray-500 ">Store Pickup</dt>
                                <dd class="font-medium text-gray-900">$20</dd>
                            </dl>
                        </div>

                        <dl
                            class="flex items-center justify-between gap-4 border-t border-gray-200 pt-2 ">
                            <dt class="text-lg font-bold text-gray-900">Total</dt>
                            <dd class="text-lg font-bold text-gray-900">$@(ViewBag.Cart.Total + 20)</dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-6 grow sm:mt-8 lg:mt-0">
                    <div class="space-y-6 rounded-lg border border-gray-200 bg-white p-6 shadow-sm ">
                        <h3 class="text-xl font-semibold text-gray-900 ">Order history</h3>

                        <ol class="relative ms-3">
                            <li class="mb-6 border-b border-gray-200 flex justify-between">
                                <h4 class="mb-3 text-base font-semibold text-gray-900 ">Order Date</h4>
                                <p class="me-3 text-gray-400 font-medium">@ViewBag.SalesInvoice.CreatedDate.ToString("dd MMM yyyy")</p>
                            </li>

                            <li class="mb-6 border-b border-gray-200 flex justify-between">
                                <h4 class="mb-3 text-base font-semibold text-gray-900">Estimated delivery </h4>
                                <p class="me-3 text-gray-400 font-medium">@ViewBag.SalesInvoice.DelivryDate.ToString("dd MMM yyyy")</p>
                            </li>

                            <li class="mb-6 border-b border-gray-200 flex justify-between">
                                <h4 class="mb-3 text-base font-semibold text-gray-900 ">Payment Method</h4>
                                <p class="me-3 text-gray-400 font-medium">Credit Card</p>
                            </li>

                        </ol>

                        <div class="gap-4 sm:flex sm:items-center">
                            <button type="button"
                                class="w-full rounded-lg  border border-gray-200 bg-white px-5  py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-100 hover:text-primary focus:z-10 focus:outline-none focus:ring-4 focus:ring-gray-100 ">Cancel
                                the order</button>

                            <a href="#"
                                class=" flex w-full items-center justify-center rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary focus:outline-none focus:ring-4 focus:ring-primary">Order
                                details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


