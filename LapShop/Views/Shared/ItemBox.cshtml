<div class="w-full max-w-sm flex flex-col bg-white border border-gray-200 rounded-lg  img-card">
    <div class="relative overflow-hidden">
        <div class="w-full h-50 bg-contain bg-center bg-no-repeat bg-[#eaefed] rounded-t-lg"
            style="background: url(/Uploads/Items/@Model.ImageName)"></div>
        <div
            class="card-cta cursor-pointer absolute w-full bg-primary-500 hover:bg-primary-600 rounded-t-md hidden md:flex justify-center items-center gap-5 text-white h-7 bottom-0 translate-y-7 hover:translate-y-0 transition duration-300  ease-linear">
            <a asp-controller="Order" asp-action="AddToCart" asp-route-itemId="@Model.ItemId"
                class="flex justify-between items-center gap-1.5 text-sm ">
                <iconify-icon icon="hugeicons:shopping-cart-add-01" width="18" height="18"></iconify-icon>
                Add to cart
            </a>
        </div>

    </div>
    <div class="flex flex-col gap-0.5 px-3 py-2">
        <a href="" class="truncate">@Model.ItemName</a>
        <div class="flex items-center gap-0.5">
            <iconify-icon icon="solar:star-bold" class="text-amber-400 text-md"></iconify-icon>
            <iconify-icon icon="solar:star-bold" class="text-amber-400 text-md"></iconify-icon>
            <iconify-icon icon="solar:star-bold" class="text-amber-400 text-md"></iconify-icon>
            <iconify-icon icon="solar:star-bold" class="text-amber-400 text-md"></iconify-icon>
            <iconify-icon icon="solar:star-bold" class="text-amber-400 text-md"></iconify-icon>
            <span class="bg-gray-300 text-slate-800 text-xs font-medium px-1.5 rounded-sm ml-1">4.2</span>
        </div>
        <span class="font-semibold">$@Model.SalesPrice</span>
        <div
            class="md:hidden flex w-full items-center justify-center rounded-lg bg-primary-500 hover:bg-primary-600 px-5 py-2.5 text-sm font-medium text-white mt-2">
            <a href="#" class="flex justify-center items-center text-center gap-1.5">
                <iconify-icon icon="hugeicons:shopping-cart-add-01" class="text-xl"></iconify-icon>
                Add to cart
            </a>
        </div>
    </div>
</div>






