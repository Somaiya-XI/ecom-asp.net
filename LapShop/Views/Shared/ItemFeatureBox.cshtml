@model VwItem


<div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg ">
    <a href="#">
        <img class="px-8 rounded-t-lg" src="~/Uploads/Items/@Model.ImageName" alt="product image" />
    </a>
    <div class="flex flex-col gap-2 px-5 pb-5">
        <a>
            <h5 class="text-base font-semibold tracking-tight text-gray-900 truncate">@Model.ItemName</h5>
        </a>
        <span class="text-xl font-bold text-slate-900">$@Model.SalesPrice</span>
    </div>
</div>
